                    {/* @ts-ignore */}
                    {products.map((product) => (
                        <a href={getLocalizedPath(`/products/${product.slug}`, locale)} class="dropdown-link">
                            {t(product.nameKey)}
                        </a>
                    ))}
                </div>
            </div>
            <div class="nav-item"><a href={getLocalizedPath('/contact', locale)} class="nav-link" data-page="contact">{t('nav.contact')}</a></div>
        </nav>

        <!-- 3. Desktop Actions -->
        <div class="desktop-actions">
            <a href={getLocalizedPath('/dealer', locale)} class="btn-dealer">{t('nav.dealer')}</a>
            <div class="lang-wrapper">
                <button class="btn-lang" id="desktopLangBtn">
