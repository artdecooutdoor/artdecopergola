---
// Privacy Policy Page
import Layout from '../../layouts/layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n';

export async function getStaticPaths() {
	return [
		{ params: { lang: 'en' } },
		{ params: { lang: 'ru' } },
		{ params: { lang: 'az' } },
	];
}

const locale = getLangFromUrl(Astro.url);
const t = useTranslations(locale);
---

<Layout 
  title={t('footer.privacyPolicy')}
  description="Privacy Policy for Art Deco"
>

  <section class="privacy-page py-3xl">
    <div class="container-narrow">
      <h1>{t('footer.privacyPolicy')}</h1>
      
      <div class="content">
        <p>Last updated: {new Date().toLocaleDateString(locale)}</p>
        
        <h2>Information We Collect</h2>
        <p>We collect information that you provide directly to us through our contact forms and inquiries.</p>
        
        <h2>How We Use Your Information</h2>
        <p>We use the information we collect to respond to your inquiries and provide you with information about our products and services.</p>
        
        <h2>Contact Us</h2>
        <p>If you have any questions about this Privacy Policy, please contact us.</p>
      </div>
    </div>
  </section>
</Layout>

<style>
  .privacy-page h1 {
    margin-bottom: var(--spacing-2xl);
  }

  .content {
    font-size: 1.0625rem;
    line-height: 1.8;
  }

  .content h2 {
    margin-top: var(--spacing-3xl);
    margin-bottom: var(--spacing-lg);
    font-size: 1.5rem;
  }

  .content p {
    margin-bottom: var(--spacing-lg);
  }
</style>

