                </button>
                <div class="lang-menu" id="desktopLangMenu">
                    <a href={getLocalePath('az')} class={locale === 'az' ? 'lang-option active' : 'lang-option'}>AZ</a>
                    <a href={getLocalePath('ru')} class={locale === 'ru' ? 'lang-option active' : 'lang-option'}>RU</a>
                    <a href={getLocalePath('en')} class={locale === 'en' ? 'lang-option active' : 'lang-option'}>EN</a>
                </div>
            </div>
        </div>

