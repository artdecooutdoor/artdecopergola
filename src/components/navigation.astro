<!-- MOBILE DRAWER -->
<div class="mobile-drawer" id="mobileDrawer">
    <div class="mobile-list">
        <div class="mobile-item"><a href={getLocalizedPath('/about', locale)} class="mobile-link">{t('nav.about')}</a></div>
        <div class="mobile-item"><a href={getLocalizedPath('/projects', locale)} class="mobile-link">{t('nav.projects')}</a></div>
        
        <div class="mobile-item">
            <button class="mobile-link" id="mobileProdBtn">
                {t('nav.products')}
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);"><polyline points="6 9 12 15 18 9"></polyline></svg>
            </button>
            <div class="mobile-submenu" id="mobileProdMenu">
                {/* @ts-ignore */}
                {products.map((product) => (
                    <a href={getLocalizedPath(`/products/${product.slug}`, locale)} class="mobile-sub-link">
                        {t(product.nameKey)}
                    </a>
                ))}
            </div>
        </div>
        
        <div class="mobile-item"><a href={getLocalizedPath('/contact', locale)} class="mobile-link">{t('nav.contact')}</a></div>
    </div>

    <!-- Dealer Button inside Menu -->
    <div class="mobile-footer">
        <a href={getLocalizedPath('/dealer', locale)} class="btn-dealer mobile-cta">{t('nav.dealer')}</a>
    </div>
</div>

<script>
    // @ts-nocheck
    // DOM Elements
    const burgerBtn = document.getElementById('burgerBtn') as HTMLButtonElement | null;
    const mobileDrawer = document.getElementById('mobileDrawer') as HTMLElement | null;
    
    const mobileProdBtn = document.getElementById('mobileProdBtn') as HTMLButtonElement | null;
    const mobileProdMenu = document.getElementById('mobileProdMenu') as HTMLElement | null;
    
    const mobileLangToggle = document.getElementById('mobileLangToggle') as HTMLButtonElement | null;
    const mobileLangDropdown = document.getElementById('mobileLangDropdown') as HTMLElement | null;

    // Desktop Language Elements
    const desktopLangBtn = document.getElementById('desktopLangBtn') as HTMLButtonElement | null;
    const desktopLangMenu = document.getElementById('desktopLangMenu') as HTMLElement | null;
    const desktopLangWrapper = document.querySelector('.lang-wrapper') as HTMLElement | null;

    // Desktop Products Elements
    const productsNavItem = document.getElementById('productsNavItem') as HTMLElement | null;
    const productsBtn = document.getElementById('productsBtn') as HTMLButtonElement | null;
    const productsDropdown = document.getElementById('productsDropdown') as HTMLElement | null;

    // Track if products dropdown is pinned (clicked)
    let productsDropdownPinned = false;

    // 0. Set Active Nav Link Based on Current Page
    const currentPath = window.location.pathname;
    const navLinks = document.querySelectorAll('.nav-link[data-page]');
    navLinks.forEach((link) => {
        const page = link.getAttribute('data-page');
        if (currentPath.includes(`/${page}`)) {
            link.classList.add('active');
        }
    });

    // 0b. Highlight Active Product in Dropdown
    const dropdownLinks = document.querySelectorAll('.dropdown-link, .mobile-sub-link');
    dropdownLinks.forEach((link) => {
        const href = link.getAttribute('href');
        // Remove language prefix to compare paths
        const cleanPath = currentPath.replace(/^\/(en|ru|az)/, '');
        const cleanHref = href?.replace(/^\/(en|ru|az)/, '');
        
        if (cleanHref && cleanPath.includes(cleanHref.replace(/\/$/, ''))) {
            link.classList.add('active');
            // Also highlight the products button
            if (productsBtn) {
                productsBtn.classList.add('active');
            }
        }
    });

    // 1. Mobile Menu Toggle
    if (burgerBtn && mobileDrawer) {
        burgerBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            const isOpen = mobileDrawer.classList.contains('open');
            if (isOpen) {
                closeMobileMenu();
            } else {
                openMobileMenu();
            }
        });
    }

    function openMobileMenu() {
        if (mobileDrawer && burgerBtn && mobileLangDropdown && mobileLangToggle) {
            mobileDrawer.classList.add('open');
            burgerBtn.classList.add('active');
            burgerBtn.setAttribute('aria-expanded', 'true');
            // Close lang dropdown to avoid clutter
            mobileLangDropdown.classList.remove('open');
            mobileLangToggle.classList.remove('active');
            // Block body scroll
            document.body.style.overflow = 'hidden';
            // Add click outside listener
            document.addEventListener('click', handleClickOutside);
        }
    }

    function closeMobileMenu() {
        if (mobileDrawer && burgerBtn) {
            mobileDrawer.classList.remove('open');
            burgerBtn.classList.remove('active');
            burgerBtn.setAttribute('aria-expanded', 'false');
            // Restore body scroll
            document.body.style.overflow = '';
            // Remove click outside listener
            document.removeEventListener('click', handleClickOutside);
        }
    }

    function handleClickOutside(e: MouseEvent) {
        const mobileDrawer = document.getElementById('mobileDrawer');
        const burgerBtn = document.querySelector('.burger-btn');
        
        if (mobileDrawer && burgerBtn && !mobileDrawer.contains(e.target as Node) && !burgerBtn.contains(e.target as Node)) {
            closeMobileMenu();
        }
    }

    // 2. Mobile Language Toggle
    if (mobileLangToggle && mobileLangDropdown) {
        mobileLangToggle.addEventListener('click', (e) => {
            e.stopPropagation();
            const isOpen = mobileLangDropdown.classList.contains('open');
            if (isOpen) {
                mobileLangDropdown.classList.remove('open');
                mobileLangToggle.classList.remove('active');
            } else {
                mobileLangDropdown.classList.add('open');
                mobileLangToggle.classList.add('active');
            }
        });
    }

    // 3. Desktop Language Toggle - Click AND Hover
    let langMenuPinned = false; // Track if menu is pinned by click
    
    if (desktopLangBtn && desktopLangMenu && desktopLangWrapper) {
        // Click functionality - pins menu open/closed
        desktopLangBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            langMenuPinned = !langMenuPinned;
            
            if (langMenuPinned) {
                desktopLangMenu.classList.add('open');
                desktopLangBtn.classList.add('active');
            } else {
                desktopLangMenu.classList.remove('open');
                desktopLangBtn.classList.remove('active');
            }
        });

        // Hover functionality - only works if not pinned
        desktopLangWrapper.addEventListener('mouseenter', () => {
            if (!langMenuPinned) {
                desktopLangMenu.classList.add('open');
                desktopLangBtn.classList.add('active');
            }
        });

        desktopLangWrapper.addEventListener('mouseleave', () => {
            if (!langMenuPinned) {
                desktopLangMenu.classList.remove('open');
                desktopLangBtn.classList.remove('active');
            }
        });
    }

    // 4. Desktop Products - Hover AND Click
    if (productsNavItem && productsBtn && productsDropdown) {
        // Hover functionality (existing)
        productsNavItem.addEventListener('mouseenter', () => {
            if (!productsDropdownPinned) {
                productsDropdown.classList.add('hover-open');
            }
        });

        productsNavItem.addEventListener('mouseleave', () => {
            if (!productsDropdownPinned) {
                productsDropdown.classList.remove('hover-open');
            }
        });

        // Click functionality (new - pins the dropdown open)
        productsBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            productsDropdownPinned = !productsDropdownPinned;
            
            if (productsDropdownPinned) {
                productsDropdown.classList.add('pinned-open');
                productsDropdown.classList.remove('hover-open'); // Remove hover class when pinning
                productsBtn.classList.add('active');
            } else {
                productsDropdown.classList.remove('pinned-open');
                productsDropdown.classList.remove('hover-open'); // Remove hover class when unpinning
                productsBtn.classList.remove('active');
            }
        });
    }

    // 5. Mobile Products Accordion
    if (mobileProdBtn && mobileProdMenu) {
        mobileProdBtn.addEventListener('click', () => {
            mobileProdBtn.classList.toggle('active');
            const icon = mobileProdBtn.querySelector('svg') as SVGElement | null;
            
            if (mobileProdMenu.style.maxHeight) {
                mobileProdMenu.style.maxHeight = '';
                mobileProdMenu.classList.remove('open');
                if (icon) icon.style.transform = 'rotate(0deg)';
            } else {
                mobileProdMenu.classList.add('open');
                mobileProdMenu.style.maxHeight = mobileProdMenu.scrollHeight + "px";
                if (icon) icon.style.transform = 'rotate(180deg)';
            }
        });
    }

    // 6. Click Outside to Close
    document.addEventListener('click', (e) => {
        const target = e.target as Node;
        
        // Close Mobile Drawer
        if (mobileDrawer && burgerBtn && !mobileDrawer.contains(target) && !burgerBtn.contains(target) && mobileDrawer.classList.contains('open')) {
            closeMobileMenu();
        }
        
        // Close Mobile Lang
        if (mobileLangDropdown && mobileLangToggle && !mobileLangDropdown.contains(target) && !mobileLangToggle.contains(target) && mobileLangDropdown.classList.contains('open')) {
            mobileLangDropdown.classList.remove('open');
            mobileLangToggle.classList.remove('active');
        }
        
        // Close Desktop Lang (if pinned and clicked outside)
        if (desktopLangWrapper && desktopLangBtn && desktopLangMenu && !desktopLangWrapper.contains(target) && langMenuPinned) {
            langMenuPinned = false;
            desktopLangMenu.classList.remove('open');
            desktopLangBtn.classList.remove('active');
        }
        
        // Close Desktop Products Dropdown (if pinned and clicked outside)
        if (productsNavItem && productsDropdown && !productsNavItem.contains(target) && productsDropdownPinned) {
            productsDropdownPinned = false;
            productsDropdown.classList.remove('pinned-open');
            productsDropdown.classList.remove('hover-open');
            if (productsBtn) productsBtn.classList.remove('active');
        }
    });
</script>

