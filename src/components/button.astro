---
/**
 * Universal Button Component
 * Supports: btn-premium, cta-button, btn-standard, hero-button, etc.
 * Maintains all existing CSS classes and styling
 */

interface Props {
  variant?: 'premium' | 'cta' | 'standard' | 'hero' | 'read-more' | 'ideas';
  href?: string;
  text?: string;
  icon?: boolean;
  class?: string;
  ariaLabel?: string;
  target?: string;
  onclick?: string;
}

const {
  variant = 'premium',
  href = '#',
  text,
  icon = true,
  class: customClass = '',
  ariaLabel,
  target,
  onclick,
} = Astro.props;

// Map variants to CSS classes
const variantClassMap = {
  premium: 'btn-premium',
  cta: 'cta-button',
  standard: 'btn-standard',
  hero: 'hero-button',
  'read-more': 'read-more-btn',
  ideas: 'btn-ideas',
};

const buttonClass = `${variantClassMap[variant]} ${customClass}`;
const iconElement = icon ? `
  <div class="btn-icon-circle">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
      <line x1="7" y1="17" x2="17" y2="7"></line>
      <polyline points="7 7 17 7 17 17"></polyline>
    </svg>
  </div>
` : '';
---

<a 
  href={href}
  class={buttonClass}
  aria-label={ariaLabel}
  target={target}
  onclick={onclick}
>
  {text && <span>{text}</span>}
  {icon && variant === 'premium' && <div class="btn-icon-circle">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
      <line x1="7" y1="17" x2="17" y2="7"></line>
      <polyline points="7 7 17 7 17 17"></polyline>
    </svg>
  </div>}
  <slot />
</a>

