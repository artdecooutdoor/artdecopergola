            <div class="nav-item"><a href={getLocalizedPath('/about', locale)} class="nav-link" data-page="about">{t('nav.about')}</a></div>
            <div class="nav-item"><a href={getLocalizedPath('/projects', locale)} class="nav-link" data-page="projects">{t('nav.projects')}</a></div>
            <div class="nav-item" id="productsNavItem">
                <button class="nav-link" id="productsBtn" data-page="products">
                    {t('nav.products')}
