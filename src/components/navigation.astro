        <div class="mobile-actions">
            <!-- Mobile Language (Globe Icon) -->
            <div class="mobile-lang-wrapper">
                <button class="mobile-lang-toggle" id="mobileLangToggle" aria-label="Change language">
                     <svg width="22" height="22" aria-hidden="true" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>
