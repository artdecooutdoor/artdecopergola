---
import '../styles/components/navigation.css';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n';
import type { Locale } from '../types';
import { products } from '../config/products';
import type { Product } from '../config/products';

const locale = getLangFromUrl(Astro.url) as Locale;
const t = useTranslations(locale);

// Get current path for language switcher
// Strip language prefix from current path
const currentPath = Astro.url.pathname;
const pathWithoutLang = currentPath
  .replace(/^\/(en|ru|az)/, '') // Remove language prefix
  .replace(/\/$/, '') || '/'; // Handle root

// Function to get the correct locale path
const getLocalePath = (lang: Locale): string => {
  const basePath = pathWithoutLang === '/' ? '' : pathWithoutLang;
  return `/${lang}${basePath}` || `/${lang}/`;
};
